                #contactError.alert.alert-danger.hidden
                    strong Помилка!
                    |  Сталася помилка при відправлення повідомлення.


                form#contactForm(action='php/contact-form.php', method='POST')
                    .row
                        .form-group
                            .col-md-6
                                label Ваше ім'я *
                                input#name.form-control(type='text', value='', data-msg-required='Вкажіть Ваше ім`я', maxlength='100', name='name', required='')
                            .col-md-6
                                label Ваша електронна адреса *
                                input#email.form-control(type='email', value='', data-msg-required='Введіть Ваш email', data-msg-email='Будь-ласка введіть коректний email.', maxlength='100', name='email', required='')
                    .row
                        .form-group
                            .col-md-12
                                label Тема
                                input#subject.form-control(type='text', value='', data-msg-required='Зазначте тему звернення', maxlength='100', name='subject', required='')
                    .row
                        .form-group
                            .col-md-12
                                label Повідомлення *
                                textarea#message.form-control(maxlength='5000', data-msg-required='Введіть Ваше повідомлення', rows='10', name='message', required='')
                    .row
                        .col-md-12
                            input.btn.btn-primary.btn-md.mb-xlg.hvr-pulse-shrink(type='submit', value='Надіслати', data-loading-text='Loading...')


